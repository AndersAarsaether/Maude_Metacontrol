*** load modules
in ~/Documents/Maude_Metacontrol/metacontrol.maude
in ~/Documents/Maude_Metacontrol/time.maude
in ~/Documents/Maude_Metacontrol/break.maude
in ~/Documents/Maude_Metacontrol/error_msg.maude

mod TEST is
  protecting METACONTROL .
  protecting ERRORMSG .
  protecting BREAK .
  protecting TIME .

  vars T C AQ : Oid .
  var DG : Temperature .
  var TI : Time .
  vars RA1 RA2 : RuleAppliedTemp .
  var HS : HeaterStatus .
  var WS : WindowStatus .
  var AQS : AirqualityStatus .
  vars INIT CONF : Configuration .
  vars ET ET1 ET2 : EffectTemp .


  op init : -> Configuration .
  eq init = < "homeHeater" :Heater | Status: hOff, EffectTemp: 1.0, EffectAQ: -0.5, Broken: no >
            < "homeThermometer" :Thermometer | Degrees: 25.0 >
            < "homeClock" :Clock | Timesteps: 48, Time: 0 > .

  op init2 : -> Configuration .
  eq init2 = < "homeHeater" :Heater | Status: hOff, EffectTemp: 1.0, EffectAQ: -0.5, Broken: no >
            < "homeWaterheater" :Waterheater | Status: whOff, EffectTemp: 0.5, EffectAQ: -0.25, Broken: no >
            < "homeWindow" :Window | Status: closed, EffectTemp: -0.5, EffectAQ: 1.0, Broken: no >
            < "homeThermometer" :Thermometer | Degrees: 15.0 >
            < "homeAirquality" :Airquality | Value: 2.0 >
            < "homeClock" :Clock | Timesteps: 15, Time: 15 >
            < "homeComfortController" :ComfortController | Selected: no, ConfigChanged: no >
            < "homeEcoController" :EcoController | Selected: yes, ConfigChanged: no >
            < "homeHeaterErrController" :HeaterErrController | Selected: no, ConfigChanged: no >
            < "homeWaterheaterErrController" :WaterheaterErrController | Selected: no, ConfigChanged: no >
            < "homeWindowErrController" :WindowErrController | Selected: no, ConfigChanged: no >
            ***< "homeMetacontroller" :Metacontroller >
             .

  op init3 : -> Configuration .
  eq init3 = < "homeHeater" :Heater | Status: veryhot, EffectTemp: 1.0, EffectAQ: -0.5, Broken: no >
            < "homeWaterheater" :Waterheater | Status: on, EffectTemp: 0.5, EffectAQ: -0.25, Broken: no >
            < "homeWindow" :Window | Status: closed, EffectTemp: -0.5, EffectAQ: 1.0, Broken: no >
            < "homeThermometer" :Thermometer | Degrees: 15.0 >
            < "homeAirquality" :Airquality | Value: 1.0 > .

  op init4 : -> TimedConfiguration .
  eq init4 = {< "homeHeater" :Heater | Status: hOff, EffectTemp: 1.0, EffectAQ: -0.5, Broken: no >
            < "homeWaterheater" :Waterheater | Status: whOff, EffectTemp: 0.5, EffectAQ: -0.25, Broken: no >
            < "homeWindow" :Window | Status: closed, EffectTemp: -0.5, EffectAQ: 1.0, Broken: no >
            < "homeThermometer" :Thermometer | Degrees: 23.0 >
            < "homeAirquality" :Airquality | Value: -1.0 >
            < "homeClock" :Clock | Timesteps: 7, Time: 7 >
            < "homeComfortController" :ComfortController | Selected: no, ConfigChanged: no >
            < "homeEcoController" :EcoController | Selected: yes, ConfigChanged: no >
            < "homeHeaterErrController" :HeaterErrController | Selected: no, ConfigChanged: no >
            < "homeWaterheaterErrController" :WaterheaterErrController | Selected: no, ConfigChanged: no >
            < "homeWindowErrController" :WindowErrController | Selected: no, ConfigChanged: no >
            ***< "homeMetacontroller" :Metacontroller >
            < "homeQaEcology" :QaEcology | Consider: 5, Past: nil, Status: 1, QAComputed: no >
            < "homeQaComfort" :QaComfort | Consider: 5, Past: nil, Status: 1, QAComputed: no >
            < "homeQaAirquality" :QaAirquality | Consider: 5, Past: nil, Status: 1, QAComputed: no >
            < TempAqChanged: no >} .

  op init5 : -> TimedConfiguration .
  eq init5 = {< "homeHeater" :Heater | Status: hOff, EffectTemp: 1.0, EffectAQ: -0.5, Broken: no >
            < "homeWaterheater" :Waterheater | Status: whOff, EffectTemp: 0.5, EffectAQ: -0.25, Broken: no >
            < "homeWindow" :Window | Status: closed, EffectTemp: -0.5, EffectAQ: 1.0, Broken: no >
            < "homeThermometer" :Thermometer | Degrees: 19.0 >
            < "homeAirquality" :Airquality | Value: 7.0 >
            < "homeClock" :Clock | Timesteps: 0, Time: 0 >
            < "homeComfortController" :ComfortController | Selected: yes, ConfigChanged: no >
            < "homeEcoController" :EcoController | Selected: no, ConfigChanged: no >
            < TempAqChanged: no >} .


endm
eof

search [1, 100] init5 =>* {INIT:Configuration} such that getTemp(INIT) < 18.0 .

search [1, 100] init5 =>* {INIT:Configuration} such that getTemp(INIT) > 22.0 .

search [1, 100] init5 =>* {INIT:Configuration} such that getAirquality(INIT) < 0.0 .



*** Old searches
search [1] init =>* INIT:Configuration such that getTemp(INIT) <= 0.0 .

search [1] init2 =>* INIT:Configuration such that getTemp(INIT) <= 17.0 /\ getTime(INIT) <= 30 /\ getAirquality(INIT) <= 2.0 .


search [1] init2 =>* INIT:Configuration such that getTemp(INIT) <= 17.0 /\ getTime(INIT) <= 50 .


search [1] init =>* INIT:Configuration such that getTime(INIT) == 10 .

search [1] init2 =>* INIT:Configuration such that getTime(INIT) == 10 .


search [1] init2
           =>*
           < "heterPreferingController" :Controller1 | Selected: yes >
           < "windowPreferingController" :Controller2 | Selected: no >
           < "homeHeater" :Heater | Status: HS, RuleAppliedTemp: RA1, RuleAppliedAQ: no, EffectTemp: ET1 >
           < "homeWindow" :Window | Status: WS, RuleAppliedTemp: RA2, RuleAppliedAQ: no, EffectTemp: ET2 >
           < "homeThermometer" :Thermometer | Degrees: DG >
           < "homeClock" :Clock | Time: 10 > .


search [1] init =>* INIT:Configuration such that INIT == init .

search [1] < "homeHeater" :Heater | Status: veryhot, EffectTemp: 0.2 >
          < "homeWindow" :Window | Status: open, EffectTemp: -0.2 >
          < "homeThermometer" :Thermometer | Degrees: 20.0 >
          < "homeClock" :Clock | Time: 0 >
           =>*
           < "homeHeater" :Heater | Status: HS, RuleAppliedTemp: RA1, RuleAppliedAQ: no, EffectTemp: ET1 >
           < "homeWindow" :Window | Status: WS, RuleAppliedTemp: RA2, RuleAppliedAQ: no, EffectTemp: ET2 >
           < "homeThermometer" :Thermometer | Degrees: DG >
           < "homeClock" :Clock | Time: TI >
           such that TI == 0 /\ DG == 20.0 /\ ET1 == 0.2 /\ ET2 == - 0.2
           /\ HS == veryhot /\ WS == open /\ RA1 == no /\ RA2 == no .

search [1] < "homeHeater" :Heater | Status: veryhot, EffectTemp: 0.2 >
           < "homeWindow" :Window | Status: open, EffectTemp: -0.2 >
           < "homeThermometer" :Thermometer | Degrees: 20.0 >
           < "homeClock" :Clock | Time: 0 >
            =>*
            < "homeHeater" :Heater | Status: veryhot, EffectTemp: 0.2 >
            < "homeWindow" :Window | Status: open, EffectTemp: -0.2 >
            < "homeThermometer" :Thermometer | Degrees: 20.0 >
            < "homeClock" :Clock | Time: 0 > .
